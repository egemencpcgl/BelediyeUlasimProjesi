@model IEnumerable<BelediyeUlasimProjesi.Data.Bus>


@{
    ViewData["Title"] = "Otobüs Listesi";
}
<php>
    <link rel="stylesheet" href="~/css/StyleSheet.css"/>
</php>
<h1 class="text-center">Otobüs Listesi</h1>
<div style="border-style:groove">
    
    <div id="govde">
        <p>
            <a class="btn btn-success" asp-action="CreateBus">Yeni Oluştur</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BusName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StationName)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.FirstDepartureTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastDepartureTime)
                        </th>*@
                    @*<th>
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BusName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StationName)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.FirstDepartureTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastDepartureTime)
                            </td>*@
                        @*<td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>*@
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                            <a class="btn btn-primary " asp-action="Details" asp-route-id="@item.Id">Detay</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

    

